<div class="page-header">
  <h1>
    Shipments
    <a href="/shipments/new" class="btn btn-lg btn-success">New Shipment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Photo</th>
        <th>Destination</th>
        <th>Origin</th>
        <th>Offer price</th>
        <th>Data of shipment</th>
        <th>Actions</th>
      </tr>

      <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.user_id %></td>
        <td><%= shipment.photo %></td>
        <td><%= shipment.destination_id %></td>
        <td><%= shipment.origin_id %></td>
        <td><%= shipment.offer_price %></td>
        <td><%= shipment.data_of_shipment %></td>
        <td>
          <a href="/shipments/<%= shipment.id %>" class="btn btn-primary">Show</a>
          <a href="/shipments/<%= shipment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shipment/<%= shipment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
