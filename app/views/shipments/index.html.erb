<div class="page-header">
  <h1>
    Shipments
    <a href="/shipments/new" class="btn btn-lg btn-success">New Shipment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date of shipment</th>
        <th>Origin</th>
        <th>Destination</th>

        <th>Photo</th>
        <th>Offer price</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.data_of_shipment %></td>

        <!-- <td><%= shipment.origin_id %></td> -->

        <% id = shipment.origin_id %>
        <% origin_city = City.find_by( :id => id) %>
        <td><%= origin_city.city %></td>



        <!-- <td><%= shipment.destination_id %></td> -->

        <% id = shipment.destination_id %>
        <% dest_city = City.find_by( :id => id) %>
        <td><%= dest_city.city %></td>


        <td><img src="<%= shipment.photo %>" width="75"></td>


        <td><%= shipment.offer_price %></td>
        <td><%= shipment.user.email %></td>
        <td>
          <a href="/shipments/<%= shipment.id %>" class="btn btn-primary">Show</a>
          <a href="/shipments/<%= shipment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shipment/<%= shipment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
